{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
<div class="contacts-wrapper">
    <div class="contacts">
        <h2 class="title">{{#str}}form_title, local_contact{{/str}}</h2>
        <h5 class="sub-title">{{#str}}form_sub-title, local_contact{{/str}}</h5>
        <div class="info">
            <div class="info-left">
                <form action="{{config.wwwroot}}/local/contact/index.php" method="post">
                    <div class="info-row">
                        <label for="info-name">{{#str}}form_name, local_contact{{/str}}</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="info-row">
                        <label for="info-email">{{#str}}form_email, local_contact{{/str}}</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="info-row">
                        <label for="info-subject">{{#str}}form_subject, local_contact{{/str}}</label>
                        <input type="text" id="subject" name="subject">
                    </div>
                    <div class="info-row">
                        <label for="info-content">{{#str}}form_content, local_contact{{/str}}</label>
                        <textarea type="text" id="message" name="message"></textarea>
                    </div>
                    <input type="hidden" id="sesskey" name="sesskey" value="">
                    <script>document.getElementById('sesskey').value = M.cfg.sesskey;</script>
                    <div class="info-row">
                        <label for="info-content">&nbsp;</label>
                        <input type="submit" name="submit" id="submit" value="{{#str}}form_send, local_contact{{/str}}">
                    </div>
                </form>
            </div>
            <div class="info-right">
                <div class="info-row">
                    <p class="icon-label">{{#str}}form_info_phone, local_contact{{/str}}</p>
                    <div class="icon-wrapper">
                        <span class="icon icon-phone"></span>
                    </div>
                </div>
                <div class="info-row">
                    <p class="icon-label">{{#str}}form_info_mobile, local_contact{{/str}}</p>
                    <div class="icon-wrapper">
                        <span class="icon icon-mobile"></span>
                    </div>
                </div>
                <div class="info-row">
                    <p class="icon-label">{{#str}}form_info_email, local_contact{{/str}}</p>
                    <div class="icon-wrapper">
                        <span class="icon icon-email"></span>
                    </div>
                </div>
                <div class="info-row">
                    <p class="icon-label">{{#str}}form_info_site, local_contact{{/str}}</p>
                    <div class="icon-wrapper">
                        <span class="icon icon-link"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
