<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/kmgoogle/db" VERSION="20160615" COMMENT="XMLDB file for Moodle mod/kmgoogle"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="kmgoogle" COMMENT="Each record is one kmgoogle module with its configuration">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="intro text field format"/>

                <FIELD NAME="namefile" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>

                <FIELD NAME="sourcegoogleurl" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="copiedgoogleurl" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="googlefolderurl" TYPE="text" NOTNULL="true" SEQUENCE="false"/>

                <FIELD NAME="ififrame" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="iframewidth" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="iframeheight" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="targetiframe" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="buttonhtml" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="buttonhtmlformat" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="association" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="associationname" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="permissions" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="sendtoteacher" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="natureofserving" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="studenttoclick" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="datelastsubmit" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="studentconsent" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="submitmechanism" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="numberattempts" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>

                <FIELD NAME="completionsubmit" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="If this field is set to 1, then the activity will be automatically marked as 'complete' once the user submits the kmgoogle."/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>

            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
            </INDEXES>
        </TABLE>

        <TABLE NAME="kmgoogle_answers" COMMENT="Each record is one kmgoogle module with its configuration">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="instanceid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="url" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>

            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="instanceid" UNIQUE="false" FIELDS="instanceid"/>
                <INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
            </INDEXES>
        </TABLE>

        <TABLE NAME="kmgoogle_permission" COMMENT="Each record is one kmgoogle module with its configuration">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="instanceid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="permission" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="permissionid" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="url" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="ifgdupdated" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>

            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="instanceid" UNIQUE="false" FIELDS="instanceid"/>
                <INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
            </INDEXES>
        </TABLE>

    </TABLES>
</XMLDB>