{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
<div class="login-popup-wrapper open" id="login-popup-wrapper">
    <div class="login-popup">
        <div class="title-block">
            <h3 class="title">{{#str}}welcome,theme_kmboost{{/str}}</h3>
            <h5 class="sub-title">{{#str}}loginas,theme_kmboost{{/str}}</h5>
        </div>
        <div class="links">
            {{#oauth2googleurl}}
            <a href="{{oauth2googleurl}}" class="link link-mail">
                <div class="link-image"></div>
                <p class="link-label">{{#str}}oauth2google,theme_kmboost{{/str}}</p>
            </a>
            {{/oauth2googleurl}}
            <a href="javascript:void(0)" class="d-none link link-identification">
                <div class="link-image"></div>
                <p class="link-label">{{#str}}unified_identification,theme_kmboost{{/str}}</p>
            </a>
            <form action="{{config.wwwroot}}/login/index.php" method="post" id="guestlogin">
                <input type="hidden" name="username" value="guest">
                <input type="hidden" name="password" value="guest">
                <button class="link link-guest" type="submit">
                    <div class="link-image"></div>
                    <p class="link-label">{{#str}}guest{{/str}}</p>
                </button>
            </form>
        </div>
    </div>
</div>
{{#js}}
    require(['jquery'], function($){

        $('#login-popup-open').on('click', function(event) {
            $('#login-popup-wrapper').addClass('open');
        });

        $('#login-popup-close').on('click', function(event) {
            $('#login-popup-wrapper').removeClass('open');
        });

    });
{{/js}}
